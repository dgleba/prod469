
<row class="row is-table-row" >

  <div class="col-sm-1 ">
    <%= link_to 'Create', new_elist_report_path , class: "btn btn-success"%>
  </div>

  <div class="col-sm-2 ">
    <h4>Listing Elist Reports</h4>
  </div>

  <div class="col-sm-3">
    <%= search_form_for @q, class: 'search-form' do |f| %>
      <div class="input-group">
        <%= f.search_field :when_to_send_cont, class: 'form-control' %>
        <span class="input-group-btn">
          <button class="btn btn-primary">Search <i class="fa fa-search"></i>
          </button>
        </span>
      </div>
    <% end %>
  </div>

  <div class="col-sm-4 ">
    <%= paginate @elist_reports %>
  </div>
  
  <div class="col-sm-2 ">
    <%= page_entries_info @elist_reports, :entry_name => 'item' %>
  </div>
  
</row>


<table class="table table-striped">
  <thead>
    <tr>
      <th colspan="1"></th>
            <th>When to send</th>
      <th>Elist</th>
      <th>Report</th>
      <th>Active status</th>
      <th>Sort order</th>
    </tr>
  </thead>

  <tbody>
    <% @elist_reports.each do |elist_report| %>
      <tr>
        <td>
          <div class="btn-group">
          <%= link_to 'Show', elist_report, class: "btn btn-info", :style=>'color:#FFFFFF;' %>
          <%= link_to 'Edit', edit_elist_report_path(elist_report), class: "btn btn-primary", :style=>'color:#FFFFFF;' %>
          <%= link_to 'Destroy', elist_report, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-warning", :style=>'color:#FFFFFF;' %>
          </div>
        </td>
        
        <td><%= elist_report.when_to_send %></td>
        <td><%= elist_report.elist %></td>
        <td><%= elist_report.report %></td>
        <td><%= elist_report.active_status %></td>
        <td><%= elist_report.sort_order %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
